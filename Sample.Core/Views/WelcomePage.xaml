<?xml version="1.0" encoding="utf-8" ?>
<views:MvxContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                      xmlns:controls="clr-namespace:Sample.Core.Controls"
                      xmlns:models="clr-namespace:Sample.Core.Models"
                      xmlns:viewModels="clr-namespace:Sample.Core.ViewModels"
                      xmlns:views="clr-namespace:MvvmCross.Forms.Views;assembly=MvvmCross.Forms"
                      xmlns:mvxViewModels="clr-namespace:MvvmCross.ViewModels;assembly=MvvmCross"
                      x:Class="Sample.Core.Views.WelcomePage"
                      x:DataType="viewModels:WelcomeViewModel"
                      x:TypeArguments="viewModels:WelcomeViewModel">
    <ContentPage.Resources>
        <DataTemplate x:Key="ItemsTemplate"
                      x:DataType="models:Item">
            <ContentView>
                <controls:ShopFrame Item="{Binding .}"
                                    Margin="8"
                                    AddToCartCommand="{Binding AddToCartCommand, Source={RelativeSource AncestorType={x:Type mvxViewModels:IMvxViewModel}}}"/>
            </ContentView>
        </DataTemplate>
    </ContentPage.Resources>
    
    <ContentPage.Content>
        <StackLayout>
            <controls:NavBar Title="{Binding [Title]}"
                             SafeAreaInsetEffectEnabled="True"
                             NavigationState="Close"
                             NavigationCommand="{Binding BackCommand}"
                             QuickActionState="Shop"
                             QuickActionDotLabel="{Binding Cart.LineItems.Count}"/>
            <ScrollView>
                <CollectionView ItemsSource="{Binding Items}"
                                ItemTemplate="{StaticResource ItemsTemplate}"/>
            </ScrollView>
        </StackLayout>
    </ContentPage.Content>
</views:MvxContentPage>